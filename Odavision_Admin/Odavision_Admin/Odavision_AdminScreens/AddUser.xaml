		<TextBlock HorizontalAlignment="Left" Margin="220.199,192.338,0,0" Style="{DynamicResource BasicTextBlock-Sketch}" VerticalAlignment="Top" Text="Usuario" FontSize="24"/>
		<TextBox HorizontalAlignment="Left" Height="51" Margin="220.199,227.836,0,0" Style="{DynamicResource TextBox-Sketch}" TextWrapping="Wrap" VerticalAlignment="Top" Width="172"/>
		<TextBlock HorizontalAlignment="Left" Margin="220.199,282.338,0,0" Style="{DynamicResource BasicTextBlock-Sketch}" VerticalAlignment="Top" Text="Correo" FontSize="24"/>
		<TextBox HorizontalAlignment="Left" Height="51" Margin="220.199,317.836,0,0" Style="{DynamicResource TextBox-Sketch}" TextWrapping="Wrap" VerticalAlignment="Top" Width="172"/>
