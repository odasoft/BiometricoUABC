<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Facial Recognition</title>
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="wrapper">

        <div id="menu">
            <div id="logo" onclick="location.href='@Url.Action("Index", "Home")'"></div>
            <ul>
                <li id="color1" onclick="location.href='@Url.Action("Index", "Home")'">INICIO</li>
                <li id="color2" onclick="location.href='@Url.Action("Rest", "Home")'">REST</li>
                <li id="color3" onclick="location.href='@Url.Action("Register", "Home")'">REGISTRAR</li>
                <li id="color4" onclick="location.href='@Url.Action("Find", "Home")'">BUSCAR</li>
            </ul>
        </div>

        <div id="divider"></div>
        <br /><br />
        @RenderBody()
        <br />
        <br />

        <footer>
            @Html.ActionLink("Inicio", "Index", "Home") |
            @Html.ActionLink("Rest", "Rest", "Home") |
            @Html.ActionLink("Registrar", "Register", "Home") |
            @Html.ActionLink("Buscar", "Find", "Home")
        </footer>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/register.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/find.js")" type="text/javascript"></script>
</body>
</html>